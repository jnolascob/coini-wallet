<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.gitlab.juancode.coiniapp.ui.contacts.ContactsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="@drawable/bg_shape"
        tools:context=".ui.contacts.ContactsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/myBalance"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$ 1,100.00"
                    android:textColor="@color/white"
                    android:textFontWeight="700"
                    android:textSize="32sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/card_white_shape"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/imgBack"
                        android:src="@drawable/ic_back" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/send"
                        android:textFontWeight="600"
                        android:textSize="20sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/search_shape"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="5"
                        android:background="@null"
                        android:hint="@string/searchCountry"
                        android:textColorHint="@color/gray20"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_search" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerContacts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="A" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="G" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="H" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="J" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="K" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="T" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="U" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="V" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="W" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Y" />

                        <TextView
                            style="@style/alphabetTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Z" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>